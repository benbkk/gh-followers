<h1>Who's Following Who?</h1>
<fieldset>
    <form action="/" method="post">
        <label for="username_input">Enter a github username</label>
        <input id="username_input" name="user" type="search" placeholder="Enter github username" required />
        <input type="submit" class="button" value="Who's Following?" />
    </form>
</fieldset>
<section class="results">
    <div class="container">
        {{data.name}}
        {{data.followers}}
        {{followers}}
    </div>
</section>
